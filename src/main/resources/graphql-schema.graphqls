
schema {
    query: Query
}

type User {
    id: Long
    firstName: String
    lastName: String
    # note that description is not part of the User JPA Java entity so we return a map from the
    # DataFetcher to allow GraphQL to construct this GraphQL entity
    description: String
}

type Query {
    allUsers : [User]
    users(ids: [Long]) : [User]
    user(id: Long) : User
}
